<li class="item">
  <h3 class="item-name"><%= item.name %></h3>
    <%= form_for item, html: {class: "update_item_form"}, url: list_item_path(@list.id, id: item.id), method: :put do |form| %>
      <%= form.text_field :name, placeholder: "name this item" %>
      <%= form.submit "update" %>
    <% end %>
  <button class="edit-item">edit</button>
  <%= button_to "delete", list_item_path(@list.id, id: item.id), method: :delete %>
</li>
